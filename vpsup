mv bin/massdns /usr/bin/;
cd ..;
rm -rf massdns/;
echo -e "\t \tDone ✔";

# masscan
echo -n "Installing masscan";
masscan="https://github.com/robertdavidgraham/masscan";
git clone -q $masscan;
cd masscan/;
make -s 2>/dev/null;
mv bin/* $../usr/bin/ 2>/dev/null;
cd ..;
rm -rf masscan;
echo -e "\t \tDone ✔";

# Gxss
echo -n "Installing Gxss.."
go install github.com/KathanP19/Gxss@latest 2>/dev/null;
echo -e "\t \tDone ";

# Kxss
echo -n "Installing kxss.."
go install github.com/Emoe/kxss@latest 2>/dev/null;
