wget -q "https://raw.githubusercontent.com/proabiral/Fresh-Resolvers/master/resolvers.txt";
mv resolvers.txt /opt/;
echo -e "\t \tDone ✔";

echo "";
mv vpsup /usr/bin/;
rm LICENSE* 2>/dev/null;
rm *.md 2>/dev/null;
mv ~/go/bin/* /usr/bin/ 2>/dev/null;
