echo -e "\t \tDone ✔";

# Custom-Wordlists
mkdir -p bugbounty/wordlists/payloads/ 2>/dev/null;
wget -q https://raw.githubusercontent.com/winteri3coming/VPS-Setup/main/payloads/open-redirect.txt 2>/dev/null;
mv open-redirect.txt bugbounty/wordlists/payloads/ 2>/dev/null;
