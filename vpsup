cd waymore/;
pip3 -q install -r requirements.txt 2>/dev/null;
python setup.py install;
echo -e "\t \tDone ";

# Hakrawler
echo -n "Installing hakrawler.."
go install github.com/hakluke/hakrawler@latest 2>/dev/null;
echo -e "\t \tDone ";

# Fatl
echo -n "Installing fatl.."
wget -q https://raw.githubusercontent.com/winteri3coming/VPS-Setup/main/fatl;
mv fatl /usr/bin/ 2>/dev/null;
