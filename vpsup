git clone -q $xsstrike;
mv XSStrike /opt/;
echo -e "\t \tDone ✔";

# massdns
echo -n "Installing massdns";
massdns="https://github.com/blechschmidt/massdns";
git clone -q $massdns;
cd massdns;
